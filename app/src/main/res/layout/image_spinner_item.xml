<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp" >

    <ImageView
        android:id="@+id/spinner_item_image"
        android:layout_width="@dimen/image_spinner_item_width"
        android:layout_height="@dimen/image_spinner_item_height"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/gold1"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/spinner_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/spinner_item_image"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="32sp" />
</androidx.constraintlayout.widget.ConstraintLayout>